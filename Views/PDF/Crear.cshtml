@model PdfFile

<div class="container">
    <div class="row">
        <form class="form-control" method="post" enctype="multipart/form-data">
            <div clas="col-md-6">
                <label class="form-control">Archivo</label>
                <br />
                <input class="form-control" type="file" asp-for="Archivo" name="file" required />
            </div>
            <div clas="col-md-6">
                <button type="submit" class="btn btn-outline-success">Insertar</button>
            </div>
        </form>
    </div>
</div>